package remove.duplicate;
import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;
import java.util.Scanner;
import java.util.stream.Collectors;

public class RemoveDuplicate {

    public static void distnict(List<Integer> list) {
        System.out.println("ArrayList with duplicates: "+ list);
        List<Integer> newList;
        newList = list.stream().distinct().collect(Collectors.toList());

        System.out.println("ArrayList with duplicates removed: " + newList);
    }

    public static void main(String[] args) {

        List<Integer> list = new ArrayList();
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter your input list of numbers to finish enter any charcter");

        while (scanner.hasNextInt()) {
            int i = scanner.nextInt();
            list.add(i);
        }
        distnict(list);
    }
}
